rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Helper function for demo mode (allows demo_user access)
    function isDemoUser(userId) {
      return userId == 'demo_user';
    }

    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read: if isOwner(userId) || isDemoUser(userId);
      allow create: if (isSignedIn() && isOwner(userId)) || isDemoUser(userId);
      allow update: if isOwner(userId) || isDemoUser(userId);
      allow delete: if false; // Prevent deletion

      // Sessions subcollection - users can only access their own sessions
      match /sessions/{sessionId} {
        allow read: if isOwner(userId) || isDemoUser(userId);
        allow create: if (isSignedIn() && isOwner(userId)) || isDemoUser(userId);
        allow update: if isOwner(userId) || isDemoUser(userId);
        allow delete: if isOwner(userId) || isDemoUser(userId);
      }

      // Preferences subcollection - users can only access their own preferences
      match /preferences/{preferencesId} {
        allow read: if isOwner(userId) || isDemoUser(userId);
        allow create: if (isSignedIn() && isOwner(userId)) || isDemoUser(userId);
        allow update: if isOwner(userId) || isDemoUser(userId);
        allow delete: if isOwner(userId) || isDemoUser(userId);
      }
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
